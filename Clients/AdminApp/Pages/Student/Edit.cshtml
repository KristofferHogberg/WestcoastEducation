@page "{id}"
@model AdminApp.Pages.Student.Edit

@section styles{
<link rel="stylesheet" href="~/css/course-page.css">
}

@{
    ViewData["Title"] = "Edit Student";
}

<h1>@ViewData["Edit Student"]</h1>
<header>
    <h1 class="page-title">Edit Student</h1>
</header>
<section class="form-container">
    <h4>Edit Student</h4>
    <section class="form-wrapper">
        <form class="form" method="post">
            <div class="form-control">
                <label asp-for="Student.FirstName"></label>
                <input asp-for="Student.FirstName" required />
            </div>
            <div class="form-control">
                <label asp-for="Student.LastName"></label>
                <input asp-for="Student.LastName" required />
            </div>
            <div class="form-control">
                <label asp-for="Student.Email"></label>
                <input asp-for="Student.Email" required />
            </div>
            <div class="form-control">
                <label asp-for="Student.PhoneNumber"></label>
                <input asp-for="Student.PhoneNumber" required />
            </div>
            <div class="form-control">
                <label asp-for="Student.Address.Street"></label>
                <input asp-for="Student.Address.Street" required />
            </div>
            <div class="form-control">
                <label asp-for="Student.Address.City"></label>
                <input asp-for="Student.Address.City" required />
            </div>
            <div class="form-control">
                <label asp-for="Student.Address.ZipCode"></label>
                <input asp-for="Student.Address.ZipCode" required />
            </div>
            <div class="form-control">
                <label asp-for="Student.Address.Country"></label>
                <input asp-for="Student.Address.Country" required />
            </div>
            <div class="buttons">
                <button type="submit" class="btn">Save</button>
            </div>
        </form>
    </section>
</section>