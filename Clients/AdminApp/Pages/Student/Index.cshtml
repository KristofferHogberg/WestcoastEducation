@page
@model AdminApp.Pages.Student.Index


@section styles{
<link rel="stylesheet" href="~/css/course-page.css">
}

@{
    ViewData["Title"] = "Index";
}

<h1 class="page-title">Students with Courses</h1>


<div class="page-button">
    <a asp-page="Create"><button class="btn">Create New Student</button></a>
</div>
<article>
    <section class="course-wrapper">
        <table class="styled_table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Students[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Students[0].LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Students[0].Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Students[0].PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Students[0].Address.Street)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Students[0].Address.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Students[0].Address.ZipCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Students[0].Address.Country)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address.Street)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address.ZipCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address.Country)
                        </td>

                        <td>
                            <a asp-page="Edit" asp-route-id="@item.StudentId"><button class="btn">Edit</button></a>
                            <a asp-page="Delete" asp-route-id="@item.StudentId"><button class="btn">Delete</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</article>